@model CasaDoSaber.Models.CarreirasModel

@{
    ViewData["title"] = "Publicar oportunidade de emprego";
}

<div class="mt-5 mb-5">
    <h1 class="display-4 text-center">@ViewData["title"]</h1>
</div>

@using(Html.BeginForm("Publiseer","Gestao", FormMethod.Post, new {@class = "form-control" }))
{
    <div class="row g-3">
        <div class="col-md-3">
            @Html.LabelFor(Model => Model.Vaga, new{@class = "form-label"})
            @Html.TextBoxFor(Model => Model.Vaga, new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(Model => Model.ModoTrabalho)
            <section class="form-control">
                <option selected disabled value="">Selecione</option>
                <option value="Presencial">Presencial</option>
                <option value="Híbrido">Híbrido</option>
                <option value="Home Office">Home Office</option>
            </section>
        </div>
        <div class="col-md-2">
            @Html.LabelFor(Model => Model.TipoVaga, new{@class = "form-label"})
            <select class="form-control">
                <option selected disabled value="">Selecione</option>
                <option value="Aprendiz">Aprendiz</option>
                <option value="Estágio">Estágio</option>
                <option value="Banco de talentos">Banco de talentos</option>
                <option value="Efetivo">Efetivo</option>
                <option value="Temporário">Temporário</option>
            </select>
        </div>
        <div class="col-md-1">
            <select class="form-control">
                <option value="">AC</option>
                <option value="">AL</option>
                <option value="">AP</option>
                <option value="">AM</option>
                <option value="">BA</option>
                <option value="">CE</option>
                <option value="">DF</option>
                <option value="">ES</option>
                <option value="">GO</option>
                <option value="">MA</option>
                <option value="">MT</option>
                <option value="">MS</option>
                <option value="">MG</option>
                <option value="">PA</option>
                <option value="">PB</option>
                <option value="">PR</option>
                <option value="">PE</option>
                <option value="">PI</option>
                <option value="">RJ</option>
                <option value="">RN</option>
                <option value="">RS</option>
                <option value="">RO</option>
                <option value="">RR</option>
                <option value="">SC</option>
                <option value="">SP</option>
                <option value="">SE</option>
                <option value="">TO</option>
            </select>
        </div>
    </div>
}